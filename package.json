{
  "name": "ledge",
  "version": "3.0.0",
  "description": "personal financial transaction manager",
  "main": "server/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:tnguyen14/ledge.git"
  },
  "scripts": {
    "start": "npm run js:watch & npm run css:watch",
    "deploy": "npm run build && gh-pages -d dist",
    "build": "npm run clean && npm run static && npm run css && npm run js",
    "clean": "rm -rf dist",
    "static": "mkdir -p dist && cp -R static/* dist",
    "css": "postcss -o dist/style.css css/style.css",
    "css:watch": "npm run css -- --watch --poll --verbose",
    "js": "node -r dotenv/config ./node_modules/.bin/browserify js/index.js -t babelify -p tinyify > dist/index.js",
    "js:dev": "SERVER_URL=https://api.tridnguyen.com/lists/ledge/tri node -r dotenv/config ./node_modules/.bin/browserify js/index.js -t babelify -g loose-envify --debug > dist/index.js",
    "js:watch": "SERVER_URL=https://api.tridnguyen.com/lists/ledge/tri node -r dotenv/config ./node_modules/.bin/watchify js/index.js -t babelify -g loose-envify -o dist/index.js -dv",
    "test": "jest && cypress run",
    "test:open": "cypress open",
    "test:production": "CYPRESS_SERVER_URL=https://lists.cloud.tridnguyen.com/ledge/tri CYPRESS_BASE_URL=https://tridnguyen.com/ledge cypress run --record"
  },
  "browser": {
    "config": "./config.json"
  },
  "keywords": [
    "ledge"
  ],
  "author": "Tri Nguyen <tri@tridnguyen.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tnguyen14/ledge/issues"
  },
  "homepage": "https://github.com/tnguyen14/ledge",
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "babel-plugin-recharts": "^1.2.1",
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "babel-polyfill": "^6.26.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "cypress": "^6.2.0",
    "cypress-failed-log": "^2.9.1",
    "cypress-localstorage-commands": "^1.3.1",
    "dotenv": "^6.2.0",
    "gh-pages": "^1.2.0",
    "http-server": "^0.12.3",
    "husky": "^4.2.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.1.1",
    "loose-envify": "^1.4.0",
    "postcss": "^7.0.5",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.0",
    "postcss-nested": "^4.1.0",
    "prettier": "^2.0.4",
    "react-responsive": "^8.2.0",
    "redux-devtools-extension": "^2.13.5",
    "tinyify": "^2.5.2",
    "watchify": "^4.0.0"
  },
  "dependencies": {
    "@primer/octicons-react": "^11.0.0",
    "@tridnguyen/auth": "^5.4.3",
    "@tridnguyen/money": "^1.6.0",
    "@tridnguyen/slugify": "^2.0.0",
    "classnames": "^2.2.6",
    "date-fns": "^2.21.2",
    "date-fns-tz": "^1.1.4",
    "prop-types": "^15.6.2",
    "react": "^16.13.1",
    "react-bootstrap": "^1.3.0",
    "react-dom": "^16.5.2",
    "react-page-visibility": "^6.2.0",
    "react-redux": "^7.2.3",
    "react-router-dom": "^5.2.0",
    "react-spinners": "^0.8.1",
    "recharts": "^1.8.5",
    "redux": "^3.7.2",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "simple-fetch": "^2.2.0"
  },
  "lint-staged": {
    "*.{js,css,scss,md}": "prettier --write"
  },
  "prettier": {
    "trailingComma": "none",
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
