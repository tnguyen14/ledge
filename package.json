{
  "name": "ledge",
  "version": "1.0.0",
  "description": "ledge. in react.",
  "main": "server/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:tnguyen14/ledge.git"
  },
  "scripts": {
    "server": "node server/index.js",
    "clean": "rm -rf dist && mkdir dist",
    "copy": "cp app/index.html dist/ && cp app/manifest.json dist/",
    "css": "node-sass app/scss/style.scss | postcss -u autoprefixer -o dist/style.css",
    "css:watch": "node-sass -w app/scss/style.scss dist/style.css & postcss -u autoprefixer -o dist/style.css dist/style.css",
    "js": "browserify app/scripts/main-react.js -o dist/main.js",
    "js:watch": "watchify app/scripts/main-react.js -t [ envify --NODE_ENV development ] -o dist/main.js -dv",
    "build": "npm run clean && npm run copy && npm run css && npm run js",
    "start": "npm run build && npm run js:watch & npm run css:watch & npm run server"
  },
  "browser": {
    "config": "./config.json"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "react"
          ]
        }
      ]
    ]
  },
  "keywords": [
    "ledge"
  ],
  "author": "Tri Nguyen <tri@tridnguyen.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tnguyen14/ledge/issues"
  },
  "homepage": "https://github.com/tnguyen14/ledge",
  "devDependencies": {
    "autoprefixer": "^6.0.3",
    "babel-preset-react": "^6.0.15",
    "babelify": "^7.1.0",
    "browserify": "^12.0.1",
    "envify": "^3.4.0",
    "node-sass": "^3.4.1",
    "postcss-cli": "^2.3.2",
    "watch": "^0.16.0",
    "watchify": "^3.6.0"
  },
  "dependencies": {
    "bootstrap-sass": "^3.3.5",
    "es6-promise": "^3.0.2",
    "isomorphic-fetch": "^2.2.0",
    "moment-timezone": "^0.4.1",
    "react": "^0.14.1",
    "react-dom": "^0.14.1",
    "react-redux": "^4.0.0",
    "redux": "^3.0.4",
    "redux-logger": "^2.1.1",
    "redux-thunk": "^1.0.0",
    "restify": "^4.0.3",
    "serve-static": "^1.10.0"
  }
}
