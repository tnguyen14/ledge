{
  "name": "ledge",
  "version": "3.0.0",
  "type": "module",
  "description": "personal financial transaction manager",
  "main": "server/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:tnguyen14/ledge.git"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run vite & npm run css:watch",
    "deploy": "npm run build && gh-pages -d dist",
    "build": "vite build --emptyOutDir",
    "preview": "vite preview --port 4003",
    "css": "postcss src/**/*.css --base src --dir dist",
    "css:watch": "npm run css -- --watch --poll --verbose",
    "vite": "vite --port 4003",
    "test": "mocha ./src/**/*.test.js"
  },
  "browser": {
    "config": "./config.json"
  },
  "keywords": [
    "ledge"
  ],
  "author": "Tri Nguyen <tri@tridnguyen.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tnguyen14/ledge/issues"
  },
  "homepage": "https://github.com/tnguyen14/ledge",
  "devDependencies": {
    "@tridnguyen/auth": "^7.0.1",
    "@vitejs/plugin-react": "^4.3.1",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.12.0",
    "eslint-plugin-react": "^7.29.4",
    "gh-pages": "^3.2.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.1",
    "mocha": "^9.0.0",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1",
    "postcss-nested": "^5.0.5",
    "prettier": "^2.0.4",
    "qs": "^6.11.0",
    "simple-fetch": "^2.2.3",
    "vite": "^5.3.5"
  },
  "lint-staged": {
    "*.{js,jsx,json,css,scss,html,md}": "prettier --write"
  },
  "prettier": {
    "trailingComma": "none",
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "react": "^18.2.0"
  }
}
