{
  "name": "ledge",
  "version": "3.0.0",
  "description": "personal financial transaction manager",
  "main": "server/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:tnguyen14/ledge.git"
  },
  "scripts": {
    "start": "npm run server:watch & npm run client:watch",
    "deploy": "npm run build && gh-pages -d dist",
    "build": "npm run clean && npm run static && npm run css && npm run js",
    "client:watch": "npm run js:watch & npm run css:watch",
    "clean": "rm -rf dist",
    "static": "mkdir -p dist && cp -R static/* dist",
    "css": "postcss -o dist/style.css client/scss/style.scss",
    "css:watch": "npm run css -- --watch --poll --verbose",
    "js": "node -r dotenv/config ./node_modules/.bin/browserify client/js/index.js -t babelify -p tinyify > dist/index.js",
    "js:dev": "node -r dotenv/config ./node_modules/.bin/browserify client/js/index.js -t babelify -g loose-envify --debug > dist/index.js",
    "js:watch": "node -r dotenv/config ./node_modules/.bin/watchify client/js/index.js -t babelify -g loose-envify -o dist/index.js -dv",
    "server": "node server",
    "server:watch": "PORT=13040 nodemon --inspect=9223 server --watch server",
    "doc": "apidoc -i server/",
    "db:migrate:toFirestore": "node server/db/migrate/api-to-firestore.js"
  },
  "browser": {
    "config": "./config.json"
  },
  "keywords": [
    "ledge"
  ],
  "author": "Tri Nguyen <tri@tridnguyen.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tnguyen14/ledge/issues"
  },
  "homepage": "https://github.com/tnguyen14/ledge",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "babel-plugin-recharts": "^1.2.1",
    "babel-polyfill": "^6.26.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "gh-pages": "^1.2.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.1",
    "loose-envify": "^1.4.0",
    "nodemon": "^1.10.2",
    "postcss": "^7.0.5",
    "postcss-cli": "^7.1.1",
    "postcss-color-function": "^4.0.1",
    "postcss-import": "^12.0.0",
    "postcss-nested": "^4.1.0",
    "postcss-scss": "^2.0.0",
    "postcss-strip-inline-comments": "^0.1.5",
    "postcss-utilities": "^0.8.0",
    "prettier": "^2.0.4",
    "redux-devtools-extension": "^2.13.5",
    "tinyify": "^2.5.2",
    "watchify": "^3.11.1"
  },
  "dependencies": {
    "@primer/octicons-react": "^9.6.0",
    "@tridnguyen/auth": "^4.0.3",
    "@tridnguyen/firestore": "^2.0.0",
    "@tridnguyen/money": "^1.5.9",
    "apidoc": "^0.17.6",
    "async": "^1.5.2",
    "body-parser": "^1.17.1",
    "bootstrap": "^4.4.1",
    "bootstrap-sass": "^3.3.6",
    "classnames": "^2.2.6",
    "cors": "^2.8.3",
    "dotenv": "^6.0.0",
    "express": "^4.15.2",
    "express-jwt": "^6.0.0",
    "history": "^4.7.2",
    "isomorphic-fetch": "^3.0.0",
    "jwks-rsa": "^1.3.0",
    "lodash.chunk": "^4.2.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "lodash.union": "^4.6.0",
    "moment-timezone": "^0.5.21",
    "prop-types": "^15.6.2",
    "react": "^16.13.1",
    "react-bootstrap": "^1.3.0",
    "react-dom": "^16.5.2",
    "react-page-visibility": "^6.2.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-spinners": "^0.8.1",
    "recharts": "^1.8.5",
    "redux": "^3.7.2",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "simple-fetch": "^2.1.0",
    "underscore.string": "^3.3.5",
    "yargs": "^15.3.1"
  },
  "lint-staged": {
    "*.{js,css,scss,md}": "prettier --write"
  },
  "apidoc": {
    "title": "Ledge API",
    "url": "https://api.tridnguyen.com/ledge"
  },
  "prettier": {
    "trailingComma": "none",
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
