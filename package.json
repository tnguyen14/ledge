{
  "name": "ledge",
  "version": "2.0.0",
  "description": "ledge. in plain JS.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:tnguyen14/ledge.git"
  },
  "scripts": {
    "serve": "http-server dist -p 14001",
    "clean": "rm -rf dist && mkdir dist",
    "copy": "cp index.html dist/ && cp manifest.json dist/",
    "font": "mkdir dist/fonts && find node_modules/bootstrap-sass/assets/fonts/bootstrap -iname 'glyphicon*' -exec cp \\{\\} dist/fonts/ \\;",
    "assets": "cp assets/*.{svg,png} dist/",
    "css": "node-sass scss/style.scss dist/style.css",
    "css:watch": "node-sass -w scss/style.scss dist/style.css",
    "js": "browserify index.js -t envlocalify -t babelify -t [ hbsfy -t ] -o dist/index.js",
    "js:watch": "watchify index.js -t envlocalify -t babelify -t [ hbsfy -t ] -t [ envify --NODE_ENV development ] -o dist/index.js -dv",
    "js:watch:react": "watchify react/index.js -t envlocalify -t babelify -t [ envify --NODE_ENV development ] -o dist/react/index.js -dv",
    "static": "npm run copy && npm run font && npm run assets",
    "build": "npm run clean && npm run static && npm run css && npm run js",
    "watch": "npm run js:watch & npm run css:watch & npm run serve",
    "watch:react": "npm run js:watch:react & npm run css:watch & npm run serve",
    "start": "npm run build && npm run watch",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "browser": {
    "config": "./config.json"
  },
  "keywords": [
    "ledge"
  ],
  "author": "Tri Nguyen <tri@tridnguyen.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tnguyen14/ledge/issues"
  },
  "homepage": "https://github.com/tnguyen14/ledge",
  "devDependencies": {
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babel-polyfill": "^6.3.14",
    "babel-preset-react": "^6.24.1",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "envify": "^3.4.0",
    "eslint-config-happiness": "^5.3.1",
    "eslint-plugin-react": "^7.1.0",
    "gh-pages": "^0.8.0",
    "handlebars": "^4.0.5",
    "hbsfy": "^2.7.0",
    "http-server": "^0.9.0",
    "node-sass": "^4.5.3",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "bootstrap-sass": "^3.3.6",
    "envlocalify": "^1.1.1",
    "eventemitter3": "^1.2.0",
    "events-mixin": "^1.3.0",
    "handlebars-helpers": "^0.6.1",
    "isomorphic-fetch": "^2.2.1",
    "moment-timezone": "^0.5.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "redux": "^3.7.1",
    "simple-fetch": "^1.2.0",
    "slug": "^0.9.1"
  }
}
